programa {

  inclua biblioteca Matematica

  funcao inicio() {
    
    cadeia nome
    real horas, salario, salario_hora
    
    escreva("Informe o seu nome: ")
    leia(nome)

    escreva("Informe o valor do salário recebido: ")
    leia(salario)

    escreva("Informe as horas trabalhadas: ")
    leia(horas)

    salario_hora = (salario/horas)
    salario_hora = Matematica.arredondar(salario_hora,2)

    escreva("Você recebe: " + salario_hora + " por hora.")
  }
}
